{
	"name": "vs-fivem",
	"displayName": "vs-fivem",
	"description": "Adds highly detailed, in-depth, up-to-date fivem native support for lua to vs-code.",
	"version": "1.2.4",
	"author": "coalaura",
	"publisher": "coalaura",
	"icon": "logo.png",
	"galleryBanner": {
		"color": "#F0F0F0",
		"theme": "light"
	},
	"license": "SEE LICENSE IN LICENSE",
	"keywords": [
		"lua",
		"fivem",
		"native",
		"natives",
		"gta",
		"script"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/coalaura/vs-fivem"
	},
	"engines": {
		"vscode": "^1.77.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/*.lua",
		"onLanguage:lua"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": {
			"title": "VS-FiveM",
			"properties": {
				"vs-fivem.useParameterFormat": {
					"type": "boolean",
					"default": false,
					"description": "Format parameters in the `pParameter` style."
				}
			}
		},
		"commands": [
			{
				"command": "vs-fivem.lintFolder",
				"title": "VS-FiveM: Lint folder"
			},
			{
				"command": "vs-fivem.fixAll",
				"title": "VS-FiveM: Fix all Diagnostics"
			},
			{
				"command": "vs-fivem.createResource",
				"title": "VS-FiveM: Create new resource"
			},
			{
				"command": "vs-fivem.createEvent",
				"title": "Snippets: Event Listener"
			},
			{
				"command": "vs-fivem.createEnsureThread",
				"title": "Snippets: Ensure New Thread"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "vs-fivem.lintFolder",
					"group": "2_workspace"
				},
				{
					"when": "explorerResourceIsFolder",
					"command": "vs-fivem.createResource",
					"group": "2_workspace"
				}
			],
			"editor/context": [
				{
					"when": "editorLangId == lua",
					"command": "vs-fivem.createEvent",
					"group": "2_modification"
				},
				{
					"when": "editorLangId == lua",
					"command": "vs-fivem.createEnsureThread",
					"group": "2_modification"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "natives-search",
					"title": "Natives",
					"icon": "nav-icon.svg"
				}
			]
		},
		"views": {
			"natives-search": [
				{
					"id": "vs-fivem.search",
					"name": "Search",
					"type": "webview"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js",
		"build": "vsce package"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.77.0",
		"@vscode/test-electron": "^2.3.0",
		"eslint": "^8.36.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"@appguru/luafmt": "^1.5.0",
		"luaparse": "^0.3.1",
		"marked": "^4.3.0",
		"node-fetch": "^2.6.6"
	}
}
