{
	"name": "vs-fivem",
	"displayName": "VS FiveM IntelliSense",
	"description": "Adds highly detailed, in-depth, up-to-date fivem native support for lua to vs-code.",
	"version": "2.0.2",
	"author": "coalaura",
	"publisher": "coalaura",
	"icon": "logo.png",
	"galleryBanner": {
		"color": "#F0F0F0",
		"theme": "light"
	},
	"license": "SEE LICENSE IN LICENSE",
	"keywords": [
		"lua",
		"fivem",
		"native",
		"natives",
		"gta",
		"script",
		"glm",
		"intellisense"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/coalaura/vs-fivem"
	},
	"engines": {
		"vscode": "^1.77.0"
	},
	"categories": [
		"Linters",
		"Snippets",
		"Programming Languages"
	],
	"activationEvents": [
		"workspaceContains:**/*.lua",
		"onLanguage:lua"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"title": "VS-FiveM",
			"properties": {
				"vs-fivem.luaGLM": {
					"type": "boolean",
					"default": true,
					"markdownDescription": "Support and diagnose [Lua-GLM](https://github.com/citizenfx/lua/blob/luaglm-dev/cfx/README.md) syntax like `+=`."
				}
			}
		},
		"commands": [
			{
				"command": "vs-fivem.lintFolder",
				"title": "VS-FiveM: Lint folder"
			},
			{
				"command": "vs-fivem.fixAll",
				"title": "VS-FiveM: Fix all Diagnostics"
			},
			{
				"command": "vs-fivem.createResource",
				"title": "VS-FiveM: Create new resource"
			},
			{
				"command": "vs-fivem.convertFxManifest",
				"title": "VS-FiveM: Convert to fxmanifest.lua"
			},
			{
				"command": "vs-fivem.createEvent",
				"title": "Snippets: Event Listener"
			},
			{
				"command": "vs-fivem.createEnsureThread",
				"title": "Snippets: Ensure New Thread"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "vs-fivem.lintFolder",
					"group": "2_workspace"
				},
				{
					"when": "explorerResourceIsFolder",
					"command": "vs-fivem.createResource",
					"group": "2_workspace"
				},
				{
					"when": "resourceScheme == file && resourceFilename == '__resource.lua'",
					"command": "vs-fivem.convertFxManifest",
					"group": "2_workspace"
				}
			],
			"editor/context": [
				{
					"when": "editorLangId == lua",
					"command": "vs-fivem.createEvent",
					"group": "2_modification"
				},
				{
					"when": "editorLangId == lua",
					"command": "vs-fivem.createEnsureThread",
					"group": "2_modification"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "natives-search",
					"title": "Natives",
					"icon": "nav-icon.svg"
				}
			]
		},
		"views": {
			"natives-search": [
				{
					"id": "vs-fivem.search",
					"name": "Search",
					"type": "webview"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"package": "npm run build && vsce package",
		"build": "node esbuild.config.js",
		"watch": "node esbuild.config.js --watch"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.77.0",
		"esbuild": "^0.19.5",
		"esbuild-copy-static-files": "^0.1.0",
		"eslint": "^8.36.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"@coalaura/luaparse-glm": "^1.0.6",
		"luaparse": "^0.3.1",
		"marked": "^4.3.0",
		"node-fetch": "^2.6.6"
	}
}